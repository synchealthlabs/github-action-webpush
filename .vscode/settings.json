{
  "search.useIgnoreFiles": false,
  "search.exclude": {
      "**/.fusebox": true,
      "**/build": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/public": true,
      "**/worker/worker": true,
      "**/coverage": true,
      "**/tsconfig.tsbuildinfo": true
  },
  "javascript.implicitProjectConfig.experimentalDecorators": false,
  "workbench.colorTheme": "Default Light+",
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.formatOnSave": false,
    "editor.codeActionsOnSaveTimeout": 6000,
    "eslint.options": {
      "configFile": "./.eslintrc.js"
    },
    "eslint.lintTask.options": "-c ${workspaceRoot}/.eslintrc.js --ignore-path ${workspaceRoot}/.eslintignore --ext .ts,.js,.tsx .",
    "eslint.lintTask.enable": true, 
    "[javascript]": {
      "editor.formatOnSave": false
    },
    "[javascriptreact]": {
      "editor.formatOnSave": false
    },
    "[typescript]": {
      "editor.formatOnSave": false
    },
    "[typescriptreact]": {
      "editor.formatOnSave": false
    },
    "[json]": {
      "editor.formatOnSave": true   
    },
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact"
    ],
    "eslint.alwaysShowStatus": true,
    "files.eol": "\n"
}
